<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Id csv</th>
      <th>Merchant</th>
      <th>Shopper</th>
      <th>Amount</th>
      <th>Created</th>
      <th>Completed</th>
      <th>Status</th>
      <th>Disburse</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id_csv %></td>
        <td><%= order.merchant_id %></td>
        <td><%= order.shopper_id %></td>
        <td><%= order.amount %></td>
        <td><%= order.created %></td>
        <td><%= order.completed %></td>
        <td><%= order.status %></td>
        <td><%= order.disburse %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

